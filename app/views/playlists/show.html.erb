<%= turbo_frame_tag "playlist_interface", class: "flex flex-col h-screen justify-between" do %>
  <% if @votes.any? %>
    Current standings ..

    <table>
      <thead>
      <tr>
        <td>Name</td>
        <td>Points</td>
      </tr>
      </thead>
      <tbody>
      <% @votes.each do |vote| %>
        <tr>
          <td><%= @playlist_users[vote.first] %></td>
          <td><%= vote.second %> / <%= vote.third %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    No votes recorded yet ..
  <% end %>

  <%= render 'navigation' %>
<% end %>
