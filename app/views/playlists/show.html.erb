<%= turbo_frame_tag "playlist_interface", class: "flex flex-col h-screen justify-between p-4" do %>
  <div class="mb-auto">
    <% if @votes.any? %>
      <div class="p-4">
        <p class="lucky-font text-4xl">Current standings</p>
        <p>Playlist: <%= @playlist.name %></p>
      </div>

      <table class="table-auto w-full border-t border-x">
        <thead class="border-b">
        <tr class="bg-gray-100">
          <td class="text-left p-4 font-medium">Name</td>
          <td class="text-left p-4 font-medium">Points</td>
        </tr>
        </thead>
        <tbody>
        <% @votes.each do |vote| %>
          <tr class="border-b hover:bg-gray-50">
            <td class="p-4"><%= @playlist_users[vote.first] %></td>
            <td class="p-4"><%= vote.second %> / <%= vote.third %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% else %>
      No votes recorded yet ..
    <% end %>
  </div>

  <%= render 'navigation' %>
<% end %>
